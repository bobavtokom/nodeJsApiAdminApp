
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User</title>
  <link rel="stylesheet" href="/style.css">

</head>
<body>
 
  <div>
    <a href = '/allUsers'>All users >> </a>
  </div>
  <h1> Edit user</h1>
  <form method="post" action="/updateUser/<%= user._id %>">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" value="<%= user.email %>" required>
      <br>
      <label for="number">Ref Number:</label>
      <input type="text" id="name" name="number" value="<%= user.number %>" required>
      <br>
      <label for="vip">Vip</label>
    <input type="radio" id="vip" name="vip" value="vip">
    <label for="standard" checked="true">Standard</label>
    <input type="radio" id="standard" name="standard" value="standard">
    <button type="submit">Submit</button>
  </form>
<script>
    document.addEventListener('DOMContentLoaded', function () {
      // Function to handle radio button interactions
      function handleRadioClick(radioId) {
        const standardRadio = document.getElementById('standard');
        const vipRadio = document.getElementById('vip');

        if (radioId === 'standard') {
          standardRadio.checked = true;
          vipRadio.checked = false;
        } else if (radioId === 'vip') {
          vipRadio.checked = true;
          standardRadio.checked = false;
        }
      }
   // Set the Standard radio button to be checked by default
      handleRadioClick('standard');

      // Add event listeners to the radio buttons
      document.getElementById('standard').addEventListener('click', function () {
        handleRadioClick('standard');
      });

      document.getElementById('vip').addEventListener('click', function () {
        handleRadioClick('vip');
      });
    });
  </script>
 </body>
</html>

  